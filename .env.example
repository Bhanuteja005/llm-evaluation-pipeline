# LLM Configuration
LLM_PROVIDER=mock  # Options: mock, gemini
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=500

# Cost Configuration (USD per token)
